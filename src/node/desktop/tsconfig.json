{
  "compilerOptions": {
    "incremental": true,
    "module": "commonjs",
    "target": "es2021",
    "sourceMap": true,
    "removeComments": true,
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "paths": {
      "*": ["node_modules/*"]
    },
    "lib": ["es2021", "DOM"],
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules"],
  "ts-node": {
    "transpileOnly": true
  }
}
