set -e

source "$(dirname "${BASH_SOURCE[0]}")/../tools/rstudio-tools.sh"

# check for required ENV vars (as set by install-npm-dependencies)
if ! check_env_vars NODE_VERSION NODE_FOLDER NODE_ROOT NODE_SUBDIR NODE_BASE_URL; then
	exit 1 # check_env_vars has already printed an error message
fi

section "Applying patches to node ${NODE_VERSION}"

# Find and remove everything except the node binary
find "${NODE_SUBDIR:?}" -mindepth 1 -not -path "${NODE_SUBDIR:?}/bin/node" -delete

# If there are other files in bin, remove them specifically
if [[ -d "${NODE_SUBDIR:?}/bin" ]]; then
    find "${NODE_SUBDIR:?}/bin" -mindepth 1 -not -name "node" -delete
fi

# Verify that the node binary still exists after cleanup
if [[ ! -f "${NODE_SUBDIR:?}/bin/node" ]]; then
    echo "Error: Node binary not found at ${NODE_SUBDIR}/bin/node after cleanup"
    exit 1
fi