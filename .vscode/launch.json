{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "RStudio: Run Desktop",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "start"
      ],
      "cwd": "${workspaceFolder}/src/node/desktop",
      "console": "integratedTerminal",
      "outputCapture": "std",
      "preLaunchTask": "RStudio: Run Desktop",
      "postDebugTask": "RStudio: Stop GWT Code Server Stream",
      "presentation": {
        "hidden": true,
      }
    },
    {
      "name": "RStudio: Run Server",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "bash",
      "runtimeArgs": [
        "rserver-dev"
      ],
      "cwd": "${workspaceFolder}/build/src/cpp",
      "console": "integratedTerminal",
      "outputCapture": "std",
      "preLaunchTask": "RStudio: Run Server",
      "postDebugTask": "RStudio: Stop GWT Code Server Stream",
      "presentation": {
        "hidden": true,
      }
    },
    {
      "name": "Debug: Attach to Session",
      "type": "lldb",
      "request": "attach",
      "program": "rsession",
    }
  ],
  "compounds": [
    {
      "name": "Start RStudio Desktop",
      "configurations": [
        "RStudio: Run Desktop",
      ],
      "stopAll": true
    },
    {
      "name": "Start RStudio Server",
      "configurations": [
        "RStudio: Run Server",
      ],
      "stopAll": true
    }
  ]
}