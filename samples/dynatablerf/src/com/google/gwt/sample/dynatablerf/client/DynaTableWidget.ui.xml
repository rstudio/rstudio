<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:dt='urn:import:com.google.gwt.sample.dynatablerf.client'>
  <ui:style>
    .grid {
    	margin: 10px;
    }
    
    .name {
    	width: 20%;
    }
    
    .description {
    	width: 30%;
    }
    
    .schedule {
    	width: 50%;
    }
    
    .header {
    	text-align: left;
    	font-weight: bold;
    	text-decoration: underline;
    }
  </ui:style>
  <g:DockLayoutPanel unit="EX">
    <g:north size="5">
      <g:Widget ui:field="navbar" />
    </g:north>
    <g:center>
      <g:Grid ui:field="grid" styleName="{style.grid}">
        <g:row>
          <g:cell>
            <div class="{style.name} {style.header}">Name</div>
          </g:cell>
          <g:cell>
            <div class="{style.description} {style.header}">Description</div>
          </g:cell>
          <g:cell>
            <div class="{style.schedule} {style.header}">Schedule</div>
          </g:cell>
        </g:row>
      </g:Grid>
    </g:center>
  </g:DockLayoutPanel>
</ui:UiBinder>